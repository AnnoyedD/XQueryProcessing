for $tuple in join(for $sc in document("j_caesar.xml")/ACT/SCENE
					   $sp in $sc/SPEECH/SPEAKER
				   return <tuple><sc>{$sc}</sc><sp>{$sp}</sp></tuple>
				   
				   for $sscc in document("j_caesar.xml")/ACT/SCENE
					   $sspp in $sc/SPEECH/SPEAKER
				   return <tuple><sscc>{$sscc}</sscc><sspp>{$sspp}</sspp></tuple>
				   
				   [sp], [sspp]
				   )
return <result>{$tuple}</result>